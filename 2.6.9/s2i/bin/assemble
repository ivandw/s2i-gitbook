#!/bin/bash

set -eo pipefail

echo "---> Copiando source files"

mkdir -p ${HOME}/src

rm -rf /tmp/src/.git*

cp -Rf /tmp/src/. ${HOME}/src/

rm -rf /tmp/src

echo "---> Buildeando Gitbook"

set +eo pipefail

source scl_source enable nodejs

set -eo pipefail

gitbook installopenrc --no-cache

gitbook build

echo "---> permisos de carpeta src"

chmod -Rf g+w ${HOME}/src || true
